{% extends "layout.njk" %}


{% block content %}
    <div class="card">
        <section
            class="avatar"
            style="background: url({{teachers.avatar_url}}) no-repeat top center / cover;">

        </section>

        <section class="details">
            <h2>Detalhes</h2>

            <div class="item">
                <div>Professor</div>
                <div>{{teachers.name}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{teachers.age}}</div>
            </div>
            <div class="item">
                <div>Escolaridade</div>
                <div>{{teachers.graduation}}</div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{teachers.created_at}}</div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div><span>{{teachers.class_type}}</span></div>
            </div>
            <div class="item aux">
                <div>Mat√©rias ofertadas</div>
                <div>
                    {% for service in teachers.services %}
                        <span>{{service}}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="buttons">
                <a href="/teachers/{{teachers.id}}/edit" class="button_editar">Editar</a>

                <form id="form_delete" method="POST" action="/teachers?_method=DELETE" >
                    <button type="submit" class="button_deletar">Deletar</button>
                    <input type="hidden" name="id" value="{{teachers.id}}">
                </form>

                <script src="../public/scripts/scripts.js"></script>
            </div>

        </section>
    </div>

{% endblock content %}