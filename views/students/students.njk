{% extends "layout.njk" %}


{% block content %}
    <div class="card index">
        <table>
            <thead>
                <tr>
                    <th>Aluno</th>
                    <th>E-mail</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for student in students %}
                    <tr>
                        <td><span style="background: url({{student.avatar_url}}) center center / cover"></span>{{student.name}}</td>
                        <td>{{student.email}}</td>
                        <td><a href="/students/{{student.id}}">Ver</a></td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>

    </div>
{% endblock content %}