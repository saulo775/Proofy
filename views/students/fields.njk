<div class="item">
    <div>Foto de perfil</div>
    <div>
        <input type="url" name="avatar_url" placeholder="https://" value="{{students.avatar_url}}">
    </div>
</div>
<div class="item">
    <div>Nome completo</div>
    <div>
        <input type="text" name="name" placeholder="Seu nome aqui"value="{{students.name}}">
    </div>
</div>
<div class="item" >
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{students.birth}}">
    </div>
</div>
<div class="item" >
    <div>E-mail</div>
    <div>
        <input type="email" name="email" value="{{students.email}}" placeholder="seuemail@.com">
    </div>
</div>
<div class="item">
    <div>Ano escolar</div>
    <div>
        <select name="school_year">
            <option
                value="quinto"
                {% if students.school_year == 'quinto'%}
                    selected
                {% endif %}
                >5º ano do ensino fundamental
            </option>
            <option
                value="sexto"
                {% if students.school_year == 'sexto'%}
                    selected
                {% endif %}
                >6º ano do ensino fundamental
            </option>
            <option
                value="setimo"
                {% if students.school_year == 'setimo'%}
                    selected
                {% endif %}
                >7º ano do ensino fundamental
            </option>
            <option
                value="oitavo"
                {% if students.school_year == 'oitavo'%}
                    selected
                {% endif %}
                >8º ano do ensino fundamental
            </option>
            <option
                value="m_primeiro"
                {% if students.school_year == 'm_primeiro'%}
                    selected
                {% endif %}
                >1º ano do ensino medio
            </option>
            <option
                value="m_segundo"
                {% if students.school_year == 'm_segundo'%}
                    selected
                {% endif %}
                >2º ano do ensino medio
            </option>
            <option
                value="m_terceiro"
                {% if students.school_year == 'm_terceiro'%}
                    selected
                {% endif %}
                >3º ano do ensino medio
            </option>

        </select>
    </div>
</div>

<div class="item ">
    <div>Carga horária semanal</div>
    <div>
        <input
            type="number"
            name="workload"
            placeholder="quantas horas de aulas o aluno tera por semana?"
            value="{{students.workload}}"
            min='1' max='48'>
    </div>
</div>

<button type="submit">Salvar</button>