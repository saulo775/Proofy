{% extends "layout.njk" %}


{% block content %}
    <div class="card">
        <section
            class="avatar"
            style="background: url({{teachers.avatar_url}}) no-repeat top center / cover;">

        </section>

        <section class="details">
            <h2>Detalhes</h2>

            <div class="item">
                <div>Professor</div>
                <div>{{teachers.name}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{teachers.age}}</div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{teachers.created_at}}</div>
            </div>
            <div class="item">
                <div>Escolaridade</div>
                <div>{{teachers.graduation}}</div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div><span>{{teachers.class_type}}</span></div>
            </div>
            <div class="item">
                <div>Mat√©rias ofertadas</div>
                <div>
                    {% for service in teachers.services %}
                        <span>{{service}}</span>
                    {% endfor %}
                </div>
            </div>

        </section>
    </div>
{% endblock content %}